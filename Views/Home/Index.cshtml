<!-- Heavily assisted by https://getbootstrap.com/docs/4.1/components/carousel/ -->
<div id="popularItemsCarousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#popularItemsCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#popularItemsCarousel" data-slide-to="1"></li>
        <li data-target="#popularItemsCarousel" data-slide-to="2"></li>
        <li data-target="#popularItemsCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="https://i.ebayimg.com/images/g/Uu0AAOSwep1g52aH/s-l1600.jpg" alt="Pepperoni pizza">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="https://observatoriodegames.uol.com.br/wp-content/uploads/2020/10/among-1024x576.jpg" alt="All-dressed pizza">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Fi.ytimg.com%2Fvi%2Fy1Ec1t7IEJI%2Fhqdefault.jpg&f=1&nofb=1" alt="Cheese pizza">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="https://observatoriodegames.uol.com.br/wp-content/uploads/2020/10/among-1024x576.jpg" alt="Vegetarian pizza">
        </div>
    </div>
    <a class="carousel-control-prev" href="#popularItemsCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#popularItemsCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

