@model IEnumerable<PizzaWebsite.Data.Entities.Product>

@{
    ViewData["Title"] = "Drink Menu";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
</div>

<!-- Assisted by: https://www.w3schools.com/css/tryit.asp?filename=trycss_grid_layout_named -->
<!-- Image Sources: https://www.snapdeal.com/product/aquafina-packaged-drinking-water-1/686224394571, https://www.londondrugs.com/coke---1l/L0082412.html, https://www.londondrugs.com/pepsi---soft-drink---591-ml/L6801856.html, https://www.walmart.com/ip/Diet-Coke-Soda-20-Fl-Oz/10535201, https://www.ldproducts.com/media/catalog/product/cache/3/image/9df78eab33525d08d6e5fb8d27136e95/3/0/3000_1029764012.jpg, https://www.homeshop.ph/7up-regular-soda-500ml, https://lemoulindeprovence.com/products/schweppes-ginger-ale-591ml, https://homedelivery.sayori.ch/shop/getraenke/softdrinks/fanta-orange-0-5l/ -->
<div class="grid-container">
    @foreach (var product in Model)
    {
        <div class="product-display" product-id="@product.Id">
            <h1 class="product-name">@product.Name</h1>
            <img src="~/images/menu/drink-menu/@(product.ImageName).jpg" alt="@product.Name Bottle" />
            <h4 class="product-description">@product.Description</h4>
            <div class="product-details">
                <select autocomplete="off" class="form-control product-portion" product-id="@product.Id">
                    <option value="@product.Portions[0].Label" portion-index="0" selected>@product.Portions[0].Label</option>
                    @for (int portionIterator = 1; portionIterator < product.Portions.Count; portionIterator++)
                    {
                        <option value="@product.Portions[portionIterator].Label" portion-index="@portionIterator">@product.Portions[portionIterator].Label</option>
                    }
                </select>
                <h3 class="product-price" product-id="@product.Id" portion-index="0" style="display: block">@product.Prices[0].ToString("c")</h3>
                @for (int priceIterator = 1; priceIterator < product.Prices.Count; priceIterator++)
                {
                    <h3 class="product-price" product-id="@product.Id" portion-index="@priceIterator" style="display: none">@product.Prices[priceIterator].ToString("c")</h3>
                }
            </div>
            <button class="product-add-to-cart btn btn-success" product-id="@product.Id">Add To Cart</button>
        </div>
    }
</div>

<link rel="stylesheet" href="~/css/product-menu.css" />
<script src="~/js/productMenu.js"></script>

