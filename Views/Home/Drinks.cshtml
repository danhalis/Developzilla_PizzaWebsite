@{
    ViewData["Title"] = "Drinks Menu";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
</div>

<!-- Assisted by: https://www.w3schools.com/css/tryit.asp?filename=trycss_grid_layout_named -->
<div class="grid-container">
    <div class="product-display">
        <h1 class="product-name">Water</h1>
        <!-- Source: https://www.snapdeal.com/product/aquafina-packaged-drinking-water-1/686224394571 -->
