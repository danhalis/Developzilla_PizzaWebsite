        <div class="product-details">
            <h3 class="product-price">$2.00-$2.50-$3.00</h3>
            <h3 class="product-sizes">Small-Medium-Large</h3>
        </div>
    </div>
    <div class="product-display">
        <h1 class="product-name">Coca-Cola</h1>
        <!-- Source: https://www.londondrugs.com/coke---1l/L0082412.html -->
